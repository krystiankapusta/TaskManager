@model Project_ToDoList.Models.ToDoList
@using Project_ToDoList.Models

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<h4>Are you sure you want to delete this To-Do?</h4>
<hr />

<div>
    <h5>Title: @Model.Title</h5>
    <p>Description: @Model.Description</p>
    <p>Performer: @Model.Performer</p>
    <p>Created At: @Model.CreatedAt.ToString("g")</p>
    <p>End Date: @(Model.EndDate?.ToString("g") ?? "N/A")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
